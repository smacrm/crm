<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
        
        <lifecycle>
            <phase-listener>
                gnext.util.MultiPageMessagesSupport
            </phase-listener>   
        </lifecycle>
        
        <message-bundle>
            gnext.resource.validator.validator
        </message-bundle>
        
        <action-listener>
            gnext.security.SecureActionListener
        </action-listener>
        <action-listener>
            org.primefaces.application.DialogActionListener
        </action-listener>
        
        <navigation-handler>
            org.primefaces.application.DialogNavigationHandler
        </navigation-handler>
        <navigation-handler>
            org.primefaces.mobile.application.MobileNavigationHandler
        </navigation-handler>
        
        <view-handler>
            org.primefaces.application.DialogViewHandler
        </view-handler>
        
        <resource-handler>
            gnext.util.VersionResourceHandler <!-- Change resource version on startup -->
        </resource-handler>
    </application>
    <factory>
        <exception-handler-factory>
            gnext.security.exception.CustomExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
</faces-config>